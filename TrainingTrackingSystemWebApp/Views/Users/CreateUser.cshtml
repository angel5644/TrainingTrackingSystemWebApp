@model TrainingTrackingSystemWebApp.ViewModels.createUserVM
@{
    ViewBag.Title = "Create user";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Create user</title>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("Create", "Users", FormMethod.Post))
     {
        <form>
            <div class="form-group">
                <label for="exampleInputFirstName">First Name</label>
                <input type="text" class="form-control" id="FirstName" placeholder="Enter First Name" pattern="[A-Za-z]{2,15}$" title="Only letters" required>
            </div>
            <div class="form-group">
                <label for="exampleInputLastName">Last Name</label>
                <input type="text" class="form-control" id="LastName" placeholder="Enter Last Name" pattern="[A-Za-z]{2,15}$" title="Only letters" required>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Email</label>
                <input type="email" class="form-control" id="Email" placeholder="Enter an Email" value="example@4thsource.com" pattern=".+@("@")4thsource.com" title="Must be an email of the company." required>
            </div>
            <fieldset class="form-group row">
                <div class="col-sm-10">
                    <select required class="custom-select custom-select-lg mb-3">
                        <option value="">Type</option>
                        <option value="1">Admin</option>
                        <option value="2">Trainer</option>
                        <option value="3">Trainee</option>
                    </select>
                </div>
            </fieldset>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
     }
</body>
</html>